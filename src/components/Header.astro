---
import Logo from '../../public/sensorbucket-logo.svg';
import Button from './Button.astro';
import NavLink from './NavLink.astro';
---
<section class="w-full my-5 bg-background">
  <div class="grid grid-cols-2 sm:grid-cols-3 gap-y-4 container mx-auto justify-between rounded-xl">
    <!-- Logo -->
    <div class="p-y-1"><a href="/"><img src={Logo.src} alt="SensorBucket Logo" class="h-12"></a></div>
    <!-- Actions -->
    <div class="flex gap-3 sm:order-1 items-stretch justify-self-end">
      <Button href="/dashboard">Dashboard</Button>
      <Button href="https://github.com/SensorBucket">
          <svg xmlns="http://www.w3.org/2000/svg" width="1.5rem" height="1.5rem" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"/></svg>
      </Button>
    </div>
    <!-- Nav items -->
    <div class="flex col-span-full sm:col-span-1 gap-x-3 justify-self-center">
      <NavLink href="/">Home</NavLink>
      <NavLink href="/about">About</NavLink>
      <NavLink href="https://developer.sensorbucket.nl">Developers</NavLink>
    </div>
  </div>
</section>
