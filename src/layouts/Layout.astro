---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../const";

const { titleSuffix, title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead titleSuffix={titleSuffix} title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="container p-2 md:p-x-0">
      <slot/>
    </main>
    <Footer />
  </body>
</html>
<style>
  main {
    text-align: justify;
    min-height: min(75vh, 800px);
    margin: auto;
  }

body {
  background-color: rgb(250, 250, 250);
  background-image: url(/public/body-bg.svg);
  background-repeat: repeat;
}
</style>
